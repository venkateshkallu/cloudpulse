# Docker Compose Environment Variables
# Copy this file to .env.local for local overrides

# Database Configuration
DATABASE_NAME=cloudpulse
DATABASE_USER=postgres
DATABASE_PASSWORD=cloudpulse_dev_password

# Application Configuration
API_VERSION=1.0.0
LOG_LEVEL=INFO

# Security Configuration (CHANGE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-in-production

# Network Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,backend,frontend
CORS_ORIGINS=http://localhost:5173,http://frontend:5173,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=true

# Port Configuration
FRONTEND_PORT=5173
BACKEND_PORT=8000

# Frontend API URLs
FRONTEND_API_URL=http://localhost:8000/api
FRONTEND_WS_URL=ws://localhost:8000/ws

# Background Tasks Configuration
METRICS_UPDATE_INTERVAL=5
ENABLE_BACKGROUND_TASKS=true

# Database Pool Configuration
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Production Settings (for docker-compose.prod.yml)
DOCS_ENABLED=false
REDOC_ENABLED=false

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5
DATABASE_HEALTH_CHECK_TIMEOUT=3