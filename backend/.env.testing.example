# Testing Environment Configuration for CloudPulse Monitor
# Copy this file to .env for testing

# Environment Configuration
ENVIRONMENT=testing
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration (test database)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cloudpulse_test
DATABASE_USER=postgres
DATABASE_PASSWORD=test_password

# Security Configuration (test values)
SECRET_KEY=test-secret-key-not-for-production
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# API Configuration
API_HOST=127.0.0.1
API_PORT=8001
API_TITLE=CloudPulse Monitor API (Test)
API_VERSION=1.0.0-test

# CORS Configuration (permissive for testing)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=true

# Documentation (enabled for testing)
DOCS_ENABLED=true
REDOC_ENABLED=true

# Background Tasks Configuration (disabled for faster tests)
METRICS_UPDATE_INTERVAL=1
ENABLE_BACKGROUND_TASKS=false

# Logging Configuration (verbose for testing)
LOG_FORMAT=text
LOG_LEVEL=DEBUG

# Database Pool Configuration (minimal for testing)
DATABASE_POOL_SIZE=2
DATABASE_MAX_OVERFLOW=5
DATABASE_POOL_TIMEOUT=10

# Health Check Configuration (fast for testing)
HEALTH_CHECK_TIMEOUT=2
DATABASE_HEALTH_CHECK_TIMEOUT=1

# Rate Limiting (disabled for testing)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=1000