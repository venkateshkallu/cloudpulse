# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cloudpulse
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,cloudpulse-monitor

# CORS Configuration
# For development - allows local frontend
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://frontend:5173
CORS_ALLOW_CREDENTIALS=true

# Background Tasks Configuration
METRICS_UPDATE_INTERVAL=5
ENABLE_BACKGROUND_TASKS=true

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=logs/cloudpulse.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Database Pool Configuration
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# API Configuration
API_TITLE=CloudPulse Monitor API
API_VERSION=1.0.0
DOCS_ENABLED=true
REDOC_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5
DATABASE_HEALTH_CHECK_TIMEOUT=3

# Rate Limiting (future use)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60