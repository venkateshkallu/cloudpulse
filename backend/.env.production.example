# Production Environment Configuration for CloudPulse Monitor
# Copy this file to .env for production deployment

# Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Database Configuration (use secure credentials)
DATABASE_HOST=your-production-db-host
DATABASE_PORT=5432
DATABASE_NAME=cloudpulse_prod
DATABASE_USER=cloudpulse_user
DATABASE_PASSWORD=your-secure-database-password

# Security Configuration (REQUIRED - change these values)
SECRET_KEY=your-very-secure-secret-key-here-minimum-32-characters
ALLOWED_HOSTS=your-domain.com,api.your-domain.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=CloudPulse Monitor API
API_VERSION=1.0.0

# CORS Configuration (restrict to your frontend domains)
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com
CORS_ALLOW_CREDENTIALS=true

# Documentation (disabled in production for security)
DOCS_ENABLED=false
REDOC_ENABLED=false

# Background Tasks Configuration
METRICS_UPDATE_INTERVAL=5
ENABLE_BACKGROUND_TASKS=true

# Logging Configuration (production logging)
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/cloudpulse/app.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=10

# Database Pool Configuration (optimized for production)
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=60

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
DATABASE_HEALTH_CHECK_TIMEOUT=5

# Rate Limiting (enable in production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100